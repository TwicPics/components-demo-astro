---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div>
  <h1>{title}</h1>
  <article><slot /></article>
</div>
<style>
  h1 {
    margin-bottom: 1rem;
  }
  article :global(p) {
    margin-bottom: 0.5rem;
    text-align: justify;
  }
  article :global(p:last-of-type) {
    margin-bottom: 2rem;
  }
</style>
